<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.customAlertDialog.CustomAlertDialog">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/alertAnimation"
        android:layout_width="251dp"
        android:layout_height="252dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:lottie_rawRes="@raw/planet"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/alertSuccessOrFail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Success"
        android:textColor="@android:color/black"
        android:autoSizeTextType="uniform"
        android:layout_gravity="center"
        android:autoSizeMaxTextSize="54sp"
        android:autoSizeMinTextSize="36sp" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Excelent! your task is now scheduled"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:autoSizeMaxTextSize="34sp"
        android:autoSizeMinTextSize="32sp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertMessage" />


    <Button
        android:id="@+id/btn_okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="Okay"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        />

    <View

        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertMessage" />
</LinearLayout>