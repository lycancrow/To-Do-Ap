<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.taskTemplate.TaskTemplate"
    android:background="@color/fragment_bg">

    <!--Columns-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginColumn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndColumn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <!--Rows-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentBeginRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/taskTemplateFragmentEndRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />



    <!--Components-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Task Templates"
        android:gravity="center"
        android:fontFamily="@font/galactic"
        android:autoSizeTextType="uniform"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/taskTemplateFragmentEndRow6"
        app:layout_constraintEnd_toEndOf="@+id/taskTemplateFragmentEndColumn1"
        app:layout_constraintStart_toStartOf="@+id/taskTemplateFragmentBeginColumn1"
        app:layout_constraintTop_toTopOf="@+id/taskTemplateFragmentBeginRow6"
        />


    <LinearLayout
        android:id="@+id/doExercise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/task_template_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/taskTemplateFragmentEndRow1"
        app:layout_constraintEnd_toEndOf="@+id/taskTemplateFragmentEndColumn1"
        app:layout_constraintStart_toStartOf="@+id/taskTemplateFragmentBeginColumn1"
        app:layout_constraintTop_toTopOf="@+id/taskTemplateFragmentBeginRow1">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/exercise"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Do Exercise"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/task"
            android:textColor="@color/skyBlue"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/goToSleep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/task_template_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/taskTemplateFragmentEndRow2"
        app:layout_constraintEnd_toEndOf="@+id/taskTemplateFragmentEndColumn1"
        app:layout_constraintStart_toStartOf="@+id/taskTemplateFragmentBeginColumn1"
        app:layout_constraintTop_toTopOf="@+id/taskTemplateFragmentBeginRow2">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/moon"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Go to sleep"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/task"
            android:textColor="@color/skyBlue"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/takePills"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/task_template_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/taskTemplateFragmentEndRow3"
        app:layout_constraintEnd_toEndOf="@+id/taskTemplateFragmentEndColumn1"
        app:layout_constraintStart_toStartOf="@+id/taskTemplateFragmentBeginColumn1"
        app:layout_constraintTop_toTopOf="@+id/taskTemplateFragmentBeginRow3">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/pill"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Take Medicine"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/task"
            android:textColor="@color/skyBlue"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/breakTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/task_template_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/taskTemplateFragmentEndRow4"
        app:layout_constraintEnd_toEndOf="@+id/taskTemplateFragmentEndColumn1"
        app:layout_constraintStart_toStartOf="@+id/taskTemplateFragmentBeginColumn1"
        app:layout_constraintTop_toTopOf="@+id/taskTemplateFragmentBeginRow4">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/game_controller"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Take a break"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/task"
            android:textColor="@color/skyBlue"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/doGroceries"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/task_template_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/taskTemplateFragmentEndRow5"
        app:layout_constraintEnd_toEndOf="@+id/taskTemplateFragmentEndColumn1"
        app:layout_constraintStart_toStartOf="@+id/taskTemplateFragmentBeginColumn1"
        app:layout_constraintTop_toTopOf="@+id/taskTemplateFragmentBeginRow5">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/groceries"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Do Groceries"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/task"
            android:textColor="@color/skyBlue"
            android:fontFamily="@font/galactic"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="30sp"
            android:gravity="center_vertical"
            />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>